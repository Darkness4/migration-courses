<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ismin.android.ui.viewmodels.CreateBookViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".ui.fragments.CreateBookFragment">

        <EditText
            android:id="@+id/a_create_book_edt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={viewModel.title}"
            app:layout_constraintBottom_toTopOf="@+id/a_create_book_txv_author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/a_create_book_edt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={viewModel.author}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/a_create_book_edt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="@{() -> viewModel.showDatePicker()}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:date="@{viewModel.date}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a_create_book_txv_date"
            tools:text="29/01/1998" />

        <Button
            android:id="@+id/a_create_book_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{() -> viewModel.saveBook()}"
            android:text="Sauvegarder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a_create_book_edt_date" />

        <TextView
            android:id="@+id/a_create_book_txv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/a_create_book_edt_author"
            android:text="Author"
            app:layout_constraintBottom_toTopOf="@+id/a_create_book_edt_author"
            app:layout_constraintEnd_toEndOf="@+id/a_create_book_edt_author"
            app:layout_constraintStart_toStartOf="@+id/a_create_book_edt_author" />

        <TextView
            android:id="@+id/a_create_book_txv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/a_create_book_edt_title"
            android:text="Title"
            app:layout_constraintBottom_toTopOf="@+id/a_create_book_edt_title"
            app:layout_constraintEnd_toEndOf="@+id/a_create_book_edt_title"
            app:layout_constraintStart_toStartOf="@+id/a_create_book_edt_title" />

        <TextView
            android:id="@+id/a_create_book_txv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:labelFor="@+id/a_create_book_edt_date"
            android:text="Date"
            app:layout_constraintEnd_toEndOf="@+id/a_create_book_edt_date"
            app:layout_constraintStart_toStartOf="@+id/a_create_book_edt_date"
            app:layout_constraintTop_toBottomOf="@+id/a_create_book_edt_author" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>